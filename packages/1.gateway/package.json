{
  "name": "@gaeservices/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway Microservice",
  "main": "src/server.js",
  "scripts": {
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "watch": "nodemon src/server.js",
    "start": "node src/server.js",
    "cluster": "pm2 start src/server.js -i max",
    "bundle:identity:v1": "swagger-cli bundle ../2.identity-service/src/docs/openapi/v1/index.yaml --outfile src/docs/openapi/v1/services/identity/index.yaml --type yaml",
    "bundle:auditlogs:v1": "swagger-cli bundle ../15.auditlog-service/src/docs/openapi/v1/index.yaml --outfile src/docs/openapi/v1/services/auditlogs/index.yaml --type yaml",
    "combine:openapi:v1": "swagger-combine src/docs/openapi/v1/combine.config.json -o src/docs/openapi/v1/combined.yaml --includeDefinitions",
    "bundle:openapi:v1": "swagger-cli bundle src/docs/openapi/v1/combined.yaml --outfile src/docs/openapi/v1/bundled.yaml --type yaml",
    "build:redoc:v1": "npx @redocly/cli build-docs src/docs/openapi/v1/bundled.yaml -o src/docs/redoc/v1/index.html",
    "dev:docs:v1": "npm run combine:openapi:v1 && npm run bundle:openapi:v1 && npm run build:redoc:v1"
  },
  "keywords": [],
  "author": "Grace Akpan",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@gaeservices/common": "^1.1.3",
    "amqplib": "^0.10.8",
    "axios": "^1.11.0",
    "chalk": "^4.1.2",
    "concurrently": "^9.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-http-proxy": "^2.1.1",
    "express-rate-limit": "^8.0.1",
    "express-xss-sanitizer": "^2.0.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jest": "^30.0.5",
    "jsonwebtoken": "^9.0.2",
    "pm2": "^6.0.8",
    "rate-limit-redis": "^4.2.1",
    "rate-limiter-flexible": "^7.2.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@redocly/cli": "^2.0.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "swagger-combine": "^1.4.0"
  }
}
