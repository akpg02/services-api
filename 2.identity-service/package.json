{
  "name": "@gaeservices/identity-service",
  "version": "1.0.0",
  "description": "Identity Microservice",
  "main": "src/server.js",
  "scripts": {
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "watch": "nodemon src/server.js",
    "build": "babel src -d dist",
    "start": "node src/server.js",
    "cluster": "pm2 start src/server.js -i max",
    "worker": "node src/workers/email-processor.js",
    "lint": "redocly lint src/docs/openapi/bundled.yaml",
    "build:redoc:v1": "npx redocly build-docs src/docs/openapi/v1/index.yaml -o src/docs/redoc/v1/index.html",
    "bundle:openapi:v1": "swagger-cli bundle src/docs/openapi/v1/index.yaml --outfile src/docs/openapi/v1/bundled.yaml --type yaml",
    "dev:docs": "concurrently \"npm run build:redoc:v1\" \"npm run bundle:openapi:v1\""
  },
  "keywords": [],
  "author": "Grace Akpan",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@redocly/openapi-cli": "^0.12.16",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9"
  },
  "dependencies": {
    "@gaeservices/common": "^1.1.3",
    "amqplib": "^0.10.7",
    "argon2": "^0.41.1",
    "bull": "^4.16.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.2",
    "express-xss-sanitizer": "^2.0.0",
    "google-auth-library": "^10.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.0",
    "jest": "^30.0.5",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "rate-limit-redis": "^4.2.0",
    "rate-limiter-flexible": "^6.2.1",
    "supertest": "^7.1.4",
    "swagger-cli": "^4.0.4",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.6.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4",
    "yamljs": "^0.3.0"
  }
}
